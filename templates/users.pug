extends layouts/base.pug

block content
    main.bg-white.mx-auto.mt-10.p-10.w-full(class="lg_w-8/12")
        h1 Users
        .ot-table-wrapper.mt-10
            table.ot-table
                thead
                    tr
                        th Name
                        th Email
                        th Action
                tbody
                    each user in users
                        tr
                            td #{user.name}
                            td #{user.email}
                            td
                                a(href='/admin/user-detail/' + user.id) details
